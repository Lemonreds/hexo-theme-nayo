*  
  box-sizing border-box
  margin 0
  padding 0 

html
  font-family sans-serif
  line-height 1.15
  background $bgr
  -webkit-text-size-adjust none
body
  overflow-x hidden
  font 400 1em/1.8  $fonts
  font-size $font-size 

@media mq-mobile 
  html 
    font-size 14.5px
@media mq-tablet
  html
    font-size 15px
@media mq-middle 
  html 
    font-size 16.5px
@media mq-normal
  html 
    font-size 17px
@media mq-desktop 
  html
    font-size 17.5px 
  
a
 text-decoration none   
 transition all .2s ease-in-out
 &:link,&:visited,&:active 
   color #232729
 &:hover
   color $thr-clr

img
  display block
  max-width 100% 
  margin 15px auto 
  padding 4px
  opacity .95
  cursor pointer
  border-radius 4px
  border 1px solid #eee
     
time
  color rgba(0,0,0,.7)
  font-size 0.825rem  

.page-title 
  display block  
  text-align center  
  margin-bottom 1.5rem
  font-size 1.25rem
  letter-spacing 1px
  word-spacing 1px
  font-weight 500
  color rgba(0,0,0,.7)

  
.page-mask
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 998
  background-color rgba(0,0,0,0.04)

#page-backTop   
    opacity 0
    position fixed   
    cursor pointer
    z-index 999
    bottom 8%
    right 2%
    padding 2px 8px    
    border-radius 50%
    width 2.4rem
    height 2.4rem
    text-align center
    &:hover
      color $thr-clr    
    @media mq-mobile
      right 1rem
      bottom 56px
      right 28px

.container  
  margin-top 2.5rem
  min-height 80vh 
  
.container-inner  
    margin 0 auto
    width 52%    
    @media mq-middle
      width 100%    
    @media mq-tablet
      padding 0 12px
      width 98% 
    @media mq-middle 
      width 80%
    @media mq-normal
      width 48% 
    @media mq-desktop 
      width 48%

::selection 
  background:#EBEBEB
